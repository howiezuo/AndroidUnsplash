<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:paddingTop="@dimen/layout_padding">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/photo_ripple"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_profile"
                    android:layout_width="@dimen/profile_image_size_small"
                    android:layout_height="@dimen/profile_image_size_small"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>

                <io.github.howiezuo.unsplash.widget.RobotoTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin_small"
                    android:layout_toRightOf="@id/civ_profile"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_normal"
                    app:textStyle="medium"/>

                <io.github.howiezuo.unsplash.widget.RobotoTextView
                    android:id="@+id/tv_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_normal"
                    app:textStyle="medium"/>

                <io.github.howiezuo.unsplash.widget.FontIconView
                    android:id="@+id/fiv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_margin_small"
                    android:layout_toLeftOf="@id/tv_likes"
                    android:text="@string/fa_heart"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/icon_size"/>

                <io.github.howiezuo.unsplash.widget.FontIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_toLeftOf="@id/fiv_like"
                    android:text="@string/fa_plus_square"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/icon_size"/>

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>