<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:RobotoTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/layout_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/layout_margin">

                <io.github.howiezuo.unsplash.widget.RobotoTextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textSize="@dimen/font_size_x_large"
                    RobotoTextView:textStyle="bold"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/profile_image_size"
                    android:layout_height="@dimen/profile_image_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <LinearLayout
                    android:layout_width="@dimen/layout_status_width"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <io.github.howiezuo.unsplash.widget.RobotoTextView
                        android:id="@+id/tv_total_photos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_normal"
                        RobotoTextView:textStyle="medium" />
                    <io.github.howiezuo.unsplash.widget.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_photos"
                        android:textSize="@dimen/font_size_small"
                        RobotoTextView:textStyle="medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_status_width"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <io.github.howiezuo.unsplash.widget.RobotoTextView
                        android:id="@+id/tv_total_likes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_normal"
                        RobotoTextView:textStyle="medium" />
                    <io.github.howiezuo.unsplash.widget.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_likes"
                        android:textSize="@dimen/font_size_small"
                        RobotoTextView:textStyle="medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_status_width"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <io.github.howiezuo.unsplash.widget.RobotoTextView
                        android:id="@+id/tv_total_collections"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_normal"
                        RobotoTextView:textStyle="medium" />
                    <io.github.howiezuo.unsplash.widget.RobotoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_collections"
                        android:textSize="@dimen/font_size_small"
                        RobotoTextView:textStyle="medium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>