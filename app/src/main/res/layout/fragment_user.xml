<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_layout">

    <include layout="@layout/layout_header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_layout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="@dimen/size_profile_image"
            android:layout_height="@dimen/size_profile_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

        <io.github.howiezuo.unsplash.widget.RobotoTextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/image_profile"
            android:textSize="@dimen/font_size_x_large"
            app:rtv_textStyle="medium"/>

        <io.github.howiezuo.unsplash.widget.RobotoTextView
            android:id="@+id/text_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/text_name"
            android:layout_toLeftOf="@id/image_profile"
            android:textSize="@dimen/font_size_normal"
            app:rtv_textStyle="medium"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/width_status_layout"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <io.github.howiezuo.unsplash.widget.RobotoTextView
                android:id="@+id/text_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_large"
                app:rtv_textStyle="medium"/>

            <io.github.howiezuo.unsplash.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_photos"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/font_size_x_small"
                app:rtv_textStyle="medium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width_status_layout"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <io.github.howiezuo.unsplash.widget.RobotoTextView
                android:id="@+id/text_likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_large"
                app:rtv_textStyle="medium"/>

            <io.github.howiezuo.unsplash.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_likes"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/font_size_x_small"
                app:rtv_textStyle="medium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/width_status_layout"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <io.github.howiezuo.unsplash.widget.RobotoTextView
                android:id="@+id/text_collections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_large"
                app:rtv_textStyle="medium"/>

            <io.github.howiezuo.unsplash.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_collections"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/font_size_x_small"
                app:rtv_textStyle="medium"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
